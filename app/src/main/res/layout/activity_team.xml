<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/about_three"
    tools:context=".TeamActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/transparentDark"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/about_three"
            android:visibility="gone"
            android:scaleType="centerCrop"/>

        <TextView
            android:text="---- Our Master Chefs ----"
            android:textColor="@color/orange"
            android:textSize="28dp"
            android:padding="10dp"
            android:textStyle="italic|bold"
            style="@style/cardHtext"/>

        <androidx.cardview.widget.CardView
            style="@style/cardStyle">
            <LinearLayout
                android:id="@+id/l1"
                style="@style/cardLayout">
                <ImageView
                    android:src="@drawable/team1"
                    style="@style/cardPic"/>
                <TextView
                    android:text="Alexandra Grant"
                    style="@style/cardHtext"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            style="@style/cardStyle">
            <LinearLayout
                android:id="@+id/l2"
                style="@style/cardLayout">
                <ImageView
                    android:src="@drawable/team2"
                    style="@style/cardPic"/>
                <TextView
                    android:text="Javier Ramirez"
                    style="@style/cardHtext"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            style="@style/cardStyle">
            <LinearLayout
                android:id="@+id/l3"
                style="@style/cardLayout">
                <ImageView
                    android:src="@drawable/team3"
                    style="@style/cardPic"/>
                <TextView
                    android:text="Santos Joseph"
                    style="@style/cardHtext"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            style="@style/cardStyle">
            <LinearLayout
                android:id="@+id/l4"
                style="@style/cardLayout">
                <ImageView
                    android:src="@drawable/team4"
                    style="@style/cardPic"/>
                <TextView
                    android:text="David Jguyen"
                    style="@style/cardHtext"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </ScrollView>
</LinearLayout>