<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:src="@drawable/baseline_support_agent_24"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:text="Contact Us"/>
        <ImageView
            android:id="@+id/ivClose2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/baseline_close_244"/>
    </LinearLayout>

        <Button
            style="@style/suppBtn"
            android:id="@+id/btnCall"
            android:drawableLeft="@drawable/baseline_call_24"
            android:text="+012 320 2290183" />
        <Button
            style="@style/suppBtn"
            android:id="@+id/btnEmail"
            android:drawableLeft="@drawable/baseline_email_244"
            android:text="restoran@gmail.com" />
        <Button
            style="@style/suppBtn"
            android:id="@+id/btneLoc"
            android:drawableLeft="@drawable/baseline_location_on_24"
            android:text="123 Str New York, USA" />

</LinearLayout>