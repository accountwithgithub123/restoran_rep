<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookTable">


        <TextView
            android:text="@string/book_a_table_online_n"
            android:textSize="16sp"
            android:paddingBottom="5dp"
            android:layout_gravity="center_horizontal"
            style="@style/cardHtext"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@color/llyellow"
            android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardUseCompatPadding="true"
                app:cardElevation="8dp"
                app:cardCornerRadius="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
           app:startIconDrawable="@drawable/baseline_person_outline_24"
           style="@style/texInLay">

           <EditText
               android:id="@+id/etNamebt"
               android:hint="Your Name*"
               android:inputType="textPersonName"
               style="@style/texInLayEt"/>


       </com.google.android.material.textfield.TextInputLayout>
       <com.google.android.material.textfield.TextInputLayout
           app:startIconDrawable="@drawable/baseline_email_24"
           style="@style/texInLay">

           <EditText
               android:id="@+id/etembt"
               android:hint="Your Email*"
               android:inputType="textEmailAddress"
               style="@style/texInLayEt"/>


       </com.google.android.material.textfield.TextInputLayout>

           <LinearLayout
               android:id="@+id/laydatebt"
               style="@style/dateTimeLay">

               <ImageView
                   style="@style/imgLeft"
                   android:src="@drawable/outline_calendar_month_24"/>

               <TextView
                   android:id="@+id/etdatebt"
                   android:text="Date*"
                   style="@style/textRight"/>


           </LinearLayout>
           <LinearLayout
               android:id="@+id/laytimebt"
               style="@style/dateTimeLay">

               <ImageView
                   style="@style/imgLeft"
                   android:src="@drawable/baseline_access_time_24"/>

               <TextView
                   android:id="@+id/ettimebt"
                   android:text="Time*"
                   style="@style/textRight"/>


           </LinearLayout>



        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/baseline_people_outline_24"
            style="@style/texInLay">

            <EditText
                android:id="@+id/etguestbt"
                android:hint="No. of Guests*"
                android:inputType="number"
                android:maxLength="2"
                style="@style/texInLayEt"/>


        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/texInLay">

            <EditText
                android:id="@+id/etrequestbt"
                android:inputType="textMultiLine"
                android:layout_height="120dp"
                android:gravity="start"
                android:hint="Special Request..."
                style="@style/texInLayEt"/>


        </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button"
                android:textSize="20sp"
                android:text="Book Now" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:textAllCaps="true"
            android:textColor="@color/darkGray"
            android:backgroundTint="@color/lighGray"
            android:text="Cancel" />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

    </LinearLayout>

        </ScrollView>


</LinearLayout>