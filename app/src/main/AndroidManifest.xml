<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_nrestoran"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_nrestoran_round"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.Restoran"
        tools:targetApi="31">
        <activity
            android:name=".ForgetActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name=".ImageViewZoom"
            android:exported="false"
            android:theme="@style/ImgZoomActivity" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/splashActivity"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BookTable"
            android:exported="false"
            android:theme="@style/orderAct" />
        <activity
            android:name=".ChefDetail"
            android:exported="false"
            android:theme="@style/aboutActivity" />
        <activity
            android:name=".TableOrder"
            android:exported="false"
            android:theme="@style/aboutActivity" />
        <activity
            android:name=".TeamActivity"
            android:exported="false"
            android:theme="@style/aboutActivity" />
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:theme="@style/aboutActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/main2Theme" />
        <activity
            android:name=".LoginRegister"
            android:screenOrientation="portrait"
            android:exported="false"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>